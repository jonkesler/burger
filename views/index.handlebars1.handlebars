<div class="row">
<h2>Burgers!</h2>
<img src="/assets/img/burger.jpg" alt="Cartoon Hamberger" style="width:300px;height:250px;>
</row>

<div class="row">
<div id="container1"></div>

    <div id="first">
          <h2>New</h2>
      {{!-- <ul> --}}
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block state=false}}
          {{/unless}}
        {{/each}}
      {{!-- </ul> --}}
    </div>
    <div id="second">
      <h2>test</h2>
    </div>

    <div id="third">
      <h2>Devoured!</h2>
    {{!-- <ul> --}}
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block state=true}}
          {{!-- looks at burger-block for data layout --}}
        {{/if}}
      {{/each}}
    {{!-- </ul> --}}
    </div>
</div>
</div>

<div id="container2">
  {{!-- <div class="col-sm-2"> --}}
  <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <div class="form-group">
        <input type="hidden" name="devoured" value="0" >
      </div>

      <button type="submit">Submit</button>
      </form>
  {{!-- </div> --}}
</div>

